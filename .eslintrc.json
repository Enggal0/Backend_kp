{
    "env": {
        "node": true,
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-plusplus":"off",
        "no-unused-vars":"off",
        "max-len": [
            "error",
            {
                "code": 140,
                "tabWidth": 2
            }
        ],
        "linebreak-style": 0,
        "import/extensions": [
            "error",
            {
                "js": "ignorePackages"
            }
        ],
        "no-console": "off"
    }
}
